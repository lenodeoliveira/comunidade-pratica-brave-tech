{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": false,
        "allowJs": true,
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
           "@/*": ["*"]
        },
        "include": [
            "src"
        ],
        "exclude": [
            "**/*.spec.ts",
            "**/*.test.ts",
        ]
    }
}